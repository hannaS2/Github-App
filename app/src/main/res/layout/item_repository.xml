<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/repositoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="repositoryName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/starText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starText"
        app:srcCompat="@drawable/ic_star" />

    <TextView
        android:id="@+id/starText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/forkImageView"
        app:layout_constraintStart_toEndOf="@+id/starImageView"
        app:layout_constraintTop_toTopOf="@+id/forkImageView" />

    <ImageView
        android:id="@+id/forkImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/forkText"
        app:layout_constraintStart_toEndOf="@+id/starText"
        app:layout_constraintTop_toTopOf="@+id/forkText"
        app:srcCompat="@drawable/ic_repo_forked" />

    <TextView
        android:id="@+id/forkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/updateImageView"
        app:layout_constraintStart_toEndOf="@+id/forkImageView"
        app:layout_constraintTop_toTopOf="@+id/updateImageView" />

    <ImageView
        android:id="@+id/updateImageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/updateText"
        app:layout_constraintStart_toEndOf="@+id/forkText"
        app:layout_constraintTop_toTopOf="@+id/updateText"
        app:srcCompat="@drawable/ic_clock" />

    <TextView
        android:id="@+id/updateText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="updateDate"
        app:layout_constraintBottom_toBottomOf="@+id/languageImageView"
        app:layout_constraintStart_toEndOf="@+id/updateImageView"
        app:layout_constraintTop_toTopOf="@+id/languageImageView" />

    <ImageView
        android:id="@+id/languageImageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/languageText"
        app:layout_constraintStart_toEndOf="@+id/updateText"
        app:layout_constraintTop_toTopOf="@+id/languageText"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/languageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Java"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/languageImageView"
        app:layout_constraintTop_toBottomOf="@+id/repositoryText" />

</android.support.constraint.ConstraintLayout>